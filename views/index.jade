extends layout

block content
    #screensaver
        canvas#canvas
        i#screen_unlock.fa.fa-lock
    #modalbox
        .devoops-modal
            .devoops-modal-header
                .modal-header-name
                    span Basic table
            .box-icons
                a.close-link
                    i.fa.fa-times
            .devoops-modal-inner
            .devoops-modal-bottom
    header.navbar
        div.container-fluid.expanded-panel
            div.row
                div#logo.col-xs-12.col-sm-2
                    a(href='index.html') DevOOPS
                div#top-panel.col-xs-12.col-sm-10
                    div.row
                        div.col-xs-8.col-sm-4
                            a.show-sidebar(href='#')
                                i.fa.fa-bars
                            div#search
                                input(type='text', placeholder='search')
                                i.fa.fa-search
                        div.col-xs-4.col-sm-8.top-panel-right
                            ul.nav.navbar-nav.pull-right.panel-menu
                                li.hidden-xs
                                    a.modal-link(href='index.html')
                                        i.fa.fa-bell
                                        span.badge 7
                                li.hidden-xs
                                    a.ajax-link(href='ajax/calendar.html')
                                        i.fa.fa-calendar
                                        span.badge 7
                                li.hidden-xs
                                    a.ajax-link(href='ajax/page_messages.html')
                                        i.fa.fa-envelope
                                        span.badge 7
                                li.dropdown
                                    a.dropdown-toggle.account(href='#', data-toggle='dropdown')
                                        div.avatar
                                            img.img-rounded(src='img/avatar.jpg', alt='avatar')
                                        i.fa.fa-angle-down.pull-right
                                        div.user-mini.pull-right
                                            span.welcome Welcome,
                                            span Jane Devoops
                                    ul.dropdown-menu
                                        li
                                            a(href='#')
                                                i.fa.fa-user
                                                span Profile
                                        li
                                            a.ajax-link(href='ajax/page_messages.html')
                                                i.fa.fa-envelope
                                                span Messages
                                        li
                                            a.ajax-link(href='ajax/gallery_simple.html')
                                                i.fa.fa-picture-o
                                                span Albums
                                        li
                                            a.ajax-link(href='ajax/calendar.html')
                                                i.fa.fa-tasks
                                                span Tasks
                                        li
                                            a(href='#')
                                                i.fa.fa-cog
                                                span Settings
                                        li
                                            a(href='#')
                                                i.fa.fa-power-off
                                                span Logout
